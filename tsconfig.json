{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "strict": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
